<div class="demo-section k-content">
    <h4>Enter a date</h4>
    @(Html.Kendo().DateInput()
          .Name("dateinput")
          .Events(e =>
          {
              e.Change("change");
          })
         .HtmlAttributes(new { style = "width: 100%" })
         .Value(DateTime.Now)
    )
</div>
<div class="box">                
     <h4>Console log</h4>
     <div class="console"></div>
</div>
<script>
    function change() {
        kendoConsole.log("Change :: " + kendo.toString(this.value(), 'd'));
    }
</script>
