@using Kendo.Mvc.UI

<div class="demo-section k-content">
    @(Html.Kendo().ButtonGroup()
       .Name("player")
       .Items(t =>
       {
           t.Add().Text("Month");
           t.Add().Text("Quarter");
           t.Add().Text("Year");
       })
       .Events(ev => ev.Select("onSelect"))
    )
</div>

<div class="box">
    <h4>Console log</h4>
    <div class="console"></div>
</div>

<script>
    function onSelect(e) {
        kendoConsole.log("selected index:" + e.indices);
    }
</script>

<style>
    .demo-section {
        text-align: center;
    }
</style>
